{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "target": "ES2020",
    "lib": [
      "ES2020",
      "dom"
    ],
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "sourceMap": true,
    "isolatedModules": true,
    "noEmit": true,
  },
  "include": [
    "src",
    "public"
  ],
  "exclude": [
    "node_modules"
  ]
}